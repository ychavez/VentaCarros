<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VentaCarros2.AddCar">
    <ContentPage.Content>
        <StackLayout>

            <Frame CornerRadius="10" HeightRequest="200" WidthRequest="200" HorizontalOptions="Center">
                <Image HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" x:Name="img"></Image>
            </Frame>


            <Entry Placeholder="Modelo" x:Name="txtModelo"  HorizontalOptions="FillAndExpand" VerticalOptions="Center"></Entry>
            <Entry Placeholder="Marca"  x:Name="txtMarca" HorizontalOptions="FillAndExpand" VerticalOptions="Center"></Entry>
            <Entry Placeholder="Año"    x:Name="txtAnno" HorizontalOptions="FillAndExpand" VerticalOptions="Center" Keyboard="Numeric"></Entry>
            <Entry Placeholder="Descripcion" x:Name="txtDescripcion"  HorizontalOptions="FillAndExpand" VerticalOptions="Center"></Entry>
            <Entry Placeholder="Precio"      x:Name="txtPrecio"    HorizontalOptions="FillAndExpand" VerticalOptions="Center" Keyboard="Numeric"></Entry>
            <Button Text="Agregar" x:Name="btnagregar" Clicked="btnagregar_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>